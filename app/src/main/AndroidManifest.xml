<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="barnett.george.budgey">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="barnett.george.budgey.AndroidDatabaseManager"
            android:label="@string/app_name" />

        <activity android:name="barnett.george.budgey.AddTransactionActivity"
            android:label="Budgey" />

        <activity android:name="barnett.george.budgey.TransactionsPage"
            android:label="Budget" />

        <activity android:name="barnett.george.budgey.CategoriesPage"
            android:label="Budget" />

        <activity android:name="barnett.george.budgey.AddCategoryPage"
            android:label="Budget" />
    </application>

</manifest>