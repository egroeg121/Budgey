<android.support.design.widget.CoordinatorLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/MainGreen"
            android:padding="@dimen/PagePadding"
            android:text="Transactions Overview"
            android:textColor="@color/MainWhite"
            android:textSize="@dimen/Title"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/searchText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/titleText"
            android:layout_toStartOf="@+id/PreviousUnitOfTime"
            android:background="@color/MainGreen"
            android:hint="Search"
            android:paddingBottom="@dimen/PagePadding"
            android:paddingLeft="@dimen/PagePadding"
            android:paddingTop="@dimen/PagePadding"
            android:textColor="@color/MainWhite"
            android:textColorHint="@color/MainWhite"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/TransactionList"
            android:layout_below="@+id/titleText"
            android:layout_toStartOf="@+id/sortButton"
            android:background="@color/MainGreen"
            android:paddingLeft="@dimen/PagePadding"
            android:paddingRight="@dimen/PagePadding"
            android:src="@drawable/ic_search"
            android:tint="@color/MainWhite" />

        <ImageButton
            android:id="@+id/sortButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/TransactionList"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/titleText"
            android:background="@color/MainGreen"
            android:paddingLeft="@dimen/PagePadding"
            android:paddingRight="@dimen/PagePadding"
            android:src="@drawable/ic_sort"
            android:tint="@color/MainWhite" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/TransactionList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/DateBar"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/searchText"
            android:layout_toStartOf="@+id/PreviousUnitOfTime"></android.support.v7.widget.RecyclerView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/AddButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/DateBar"
            android:layout_margin="@dimen/PagePadding"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_done"
            android:tint="@color/MainWhite"
            app:backgroundTint="@color/MainGreen"
            app:layout_anchor="@id/TransactionList"
            app:layout_anchorGravity="bottom|right" />

        <LinearLayout
            android:id="@+id/DateBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:padding="@dimen/DateBarPadding"
            android:background="@color/MainGreen">

            <EditText
                android:id="@+id/StartDateEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="1"
                android:ems="5"
                android:hint="DD/MM/YY"
                android:inputType="textPersonName"
                android:maxLength="8"
                android:textColor="@color/MainWhite"
                android:textColorHint="@color/MainWhite"
                android:textSize="@dimen/DateBar" />

            <ImageButton
                android:id="@+id/PreviousUnitOfTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_above="@+id/TransactionList"
                android:layout_below="@+id/titleText"
                android:layout_toStartOf="@+id/sortButton"
                android:background="@color/MainGreen"
                android:paddingLeft="@dimen/DateBarPadding"
                android:paddingRight="@dimen/DateBarPadding"
                android:src="@drawable/ic_arrow_left"
                android:tint="@color/MainWhite" />

            <Spinner
                android:id="@+id/UnitOfTimeSpinner"
                android:layout_width="124dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:backgroundTint="@color/MainWhite" />

            <ImageButton
                android:id="@+id/NextUnitoFtime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_above="@+id/TransactionList"
                android:layout_below="@+id/titleText"
                android:layout_toStartOf="@+id/sortButton"
                android:background="@color/MainGreen"
                android:paddingLeft="@dimen/DateBarPadding"
                android:paddingRight="@dimen/DateBarPadding"
                android:src="@drawable/ic_arrow_right"
                android:tint="@color/MainWhite" />

            <EditText
                android:id="@+id/EndDateEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:ems="5"
                android:hint="DD/MM/YY"
                android:inputType="textPersonName"
                android:maxLength="8"
                android:textColor="@color/MainWhite"
                android:textColorHint="@color/MainWhite"
                android:textSize="@dimen/DateBar" />

        </LinearLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>