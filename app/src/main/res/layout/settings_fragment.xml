<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/DatabaseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="database"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/AddTransactions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/DatabaseButton"
        android:text="Add Transactions" />

    <Button
        android:id="@+id/AddRecurring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/AddTransactions"
        android:text="Add Recurring" />
</RelativeLayout>